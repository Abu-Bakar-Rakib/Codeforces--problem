#include<bits/stdc++.h>      //ABU BAKAR RAKIB//
#include<algorithm>          
using namespace std;
int main() 
{
    int t;
    cin>>t;
    while(t--)
    {
        int a,b,c,n;
        cin>>a>>b>>c>>n;
        int tc=a+b+c+n;
        if(tc%3==0 && max({a,b,c})<=tc/3)
        {
            cout<<"YES"<<endl;
        }
        else
        {
            cout<<"NO"<<endl;
        }
    }
    return 0;
}
