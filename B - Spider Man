#include <bits/stdc++.h>
using namespace std;
int main() 
{
    int n;
    cin>>n;
    int even=0; 
    int odd=0;
    for(int i=0;i<n;i++) 
    {
        int x;
        cin>>x;
        if(x % 2 == 0) 
        {
            even++;
        } 
        else 
        {
            odd++;
        }
        if (even % 2 == 0) 
        {
            cout<<2<<endl;
        } 
        else 
        {
            cout<<1<<endl;
        }
    }

    return 0;
}
